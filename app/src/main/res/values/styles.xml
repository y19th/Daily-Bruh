<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolBarTextAppearance" >
        <item name="android:fontFamily">@font/droid_serif</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="CustomBottomSheetDialogStyle"
        parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/item_background_dialog</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>



    <style name="RedContinueButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/jost_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/item_rounded_rectangle_red</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.3</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/continue_text</item>
    </style>

    <style name="StandardText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/jost_regular</item>
    </style>

    <style name="HeaderText" parent="StandardText">
        <item name="fontFamily">@font/jost_semibold</item>
        <item name="android:gravity">center</item>
<!--        <item name="layout_constraintStart_toStartOf">parent</item>-->
<!--        <item name="layout_constraintEnd_toEndOf">parent</item>-->
    </style>

    <style name="BigHeaderText" parent="HeaderText">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="MediumHeaderText" parent="HeaderText">
        <item name="android:textSize">20sp</item>>
    </style>

    <style name="UnderHeaderText">
        <item name="android:fontFamily">@font/jost_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BigUnderHeaderText" parent="UnderHeaderText">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MediumUnderHeaderText" parent="UnderHeaderText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ErrorText" parent="HeaderText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>

    </style>

    <style name="CardView.ArticlePhoto">

    </style>

    <style name="InputLayout">
        <item name="boxBackgroundColor">@color/background_text_field_white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>
    <style name="InputField">
        <item name="android:background">@drawable/item_rounded_rectangle_light_grey</item>
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="android:padding">0dp</item>
        <item name="android:maxLines">1</item>
    </style>


</resources>