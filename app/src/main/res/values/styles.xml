<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolBarTextAppearance" >
        <item name="android:fontFamily">@font/droid_serif</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="UserBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorAccent">@color/white</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/item_background_dialog</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="RedContinueButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/jost_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/item_rounded_rectangle_red</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.3</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HeaderText">
        <item name="android:fontFamily">@font/jost_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="UnderHeaderText">
        <item name="android:fontFamily">@font/jost_light</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>