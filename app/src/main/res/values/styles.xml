<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="CustomBottomSheetDialogStyle"
        parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/item_background_dialog</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


    <style name="RedContinueButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/jost_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/item_rounded_rectangle_red</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.3</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/continue_text</item>
    </style>

    <style name="StandardText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/jost_regular</item>
    </style>

    <style name="HeaderText" parent="StandardText">
        <item name="fontFamily">@font/jost_semibold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleText" parent="HeaderText" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
    </style>


    <style name="AuthInputText" parent="HeaderText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="KeyboardKeys" parent="HeaderText">
        <item name="android:textSize">26sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="BigHeaderText" parent="HeaderText">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="MediumHeaderText" parent="HeaderText">
        <item name="android:textSize">20sp</item>>
    </style>

    <style name="RecyclerHeaderText" parent="HeaderText">
        <item name="android:gravity">start</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="UnderHeaderText">
        <item name="android:fontFamily">@font/jost_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BigUnderHeaderText" parent="UnderHeaderText">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MediumUnderHeaderText" parent="UnderHeaderText">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ProfileHeaderText" parent="StandardText">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/jost_semibold</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="ProfileUnderHeaderText" parent="StandardText">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/jost_light</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="SmallProfileUnderHeaderText" parent="ProfileUnderHeaderText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StandardRecyclerText" parent="StandardText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DescriptionRecyclerText" parent="StandardText">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="SmallRecyclerText" parent="StandardRecyclerText">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MinimalRecyclerText" parent="StandardRecyclerText">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/back_text_color</item>

    </style>

    <style name="BigRecyclerText" parent="StandardRecyclerText">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/jost_bold</item>
    </style>

    <style name="MediumRecyclerText" parent="StandardRecyclerText">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/jost_medium</item>
    </style>

    <style name="ErrorText" parent="HeaderText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BackButtonText" parent="StandardText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DividerImageView">
        <item name="android:src">@drawable/item_divider_white</item>
        <item name="android:layout_height">4dp</item>
    </style>

    <style name="ArrowImageView">
        <item name="srcCompat">@drawable/icon_arrow_right_black</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">10dp</item>
    </style>

    <style name="ArrowImageViewLeft" parent="ArrowImageView">
        <item name="android:rotation">180</item>
    </style>


    <style name="InputLayout">
        <item name="boxBackgroundColor">@color/background_text_field_white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>
    <style name="InputField">
        <item name="android:background">@drawable/item_rounded_rectangle_light_grey</item>
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="android:padding">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="FilterField">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="FilterLayout">
        <item name="endIconMode">dropdown_menu</item>
        <item name="boxBackgroundColor">?android:attr/windowBackground</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconTint">@color/red</item>
        <item name="endIconDrawable">@drawable/icon_arrow_bottom</item>
        <item name="endIconMinSize">20dp</item>
    </style>

</resources>