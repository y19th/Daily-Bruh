<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/recycler_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:drawable/alert_light_frame"
    android:padding="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/title_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/title_text_color"
        android:textSize="28sp"
        android:text="fewfwe"
        android:fontFamily="@font/lato_bold"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        />

    <TextView
        android:id="@+id/publishedat_page"
        app:layout_constraintTop_toBottomOf="@id/title_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textColor="@color/title_text_color"
        android:textSize="16sp"
        android:text="20:20:20"
        android:fontFamily="@font/lato_italic"
        android:paddingBottom="5dp"
        />

    <TextView
        android:id="@+id/author_page"
        app:layout_constraintTop_toBottomOf="@id/publishedat_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textColor="@color/title_text_color"
        android:textSize="16sp"
        android:text="20:20:20"
        android:fontFamily="@font/lato_italic"
        android:paddingBottom="15dp"
        />

    <ImageView
        android:id="@+id/url_photo"
        app:layout_constraintTop_toBottomOf="@id/author_page"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/article_photo"
        android:padding="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/url_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="10dp"
        android:text="@string/url_text"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />
    <TextView
        android:id="@+id/desc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/url_photo"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/black"
        android:paddingTop="15dp"
        android:paddingHorizontal="10dp"
        />
    <TextView
        android:id="@+id/desc_page"
        app:layout_constraintTop_toBottomOf="@id/desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/droid_serif"
        android:textSize="14sp"
        android:textColor="@color/preview_text_color"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="31231"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
