<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_pink"
    >

    <include
        android:id="@+id/back_button"
        layout="@layout/layout_back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="@id/back_button"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profile_settings_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings_text"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            style="@style/ProfileHeaderText"

            />
        <androidx.cardview.widget.CardView
            android:id="@+id/drag_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_settings_text"
            app:cardElevation="1dp"
            android:layout_marginBottom="15dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/item_drag_line"
                />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/drag_line"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/phone_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileHeaderText"
                tools:text="+792142812"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/phone_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileUnderHeaderText"
                android:text="@string/phone"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/phone_layout"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileHeaderText"
                tools:text="Олегофрен"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileUnderHeaderText"
                android:text="@string/name_header"
                app:layout_constraintTop_toBottomOf="@id/name_field"
                app:layout_constraintStart_toStartOf="parent"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/name_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/ArrowImageView"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nickname_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_layout"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nickname_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileHeaderText"
                tools:text="y19th"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nickname_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileUnderHeaderText"
                android:text="@string/nickname_header"
                app:layout_constraintTop_toBottomOf="@id/nickname_field"
                app:layout_constraintStart_toStartOf="parent"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/nickname_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/ArrowImageView"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_drag_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_settings"
        android:layout_marginTop="10dp"
        app:cardElevation="1dp"
        android:layout_marginHorizontal="20dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/item_drag_line"
            />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/saved_news_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_drag_line"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/saved_news_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saved_news"
            style="@style/ProfileHeaderText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/saved_news_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmallProfileUnderHeaderText"
            android:text="@string/saved_news_header"
            app:layout_constraintTop_toBottomOf="@id/saved_news_field"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/saved_news_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/ArrowImageView"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/liked_news_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/saved_news_layout"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/liked_news_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/liked_news"
            style="@style/ProfileHeaderText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/liked_news_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallProfileUnderHeaderText"
            android:text="@string/liked_news_header"
            app:layout_constraintTop_toBottomOf="@id/liked_news_field"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/liked_news_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/ArrowImageView"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:text="@string/sign_out_button"
        android:textColor="@color/red_300"
        android:background="@color/transparent"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/jost_semibold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>