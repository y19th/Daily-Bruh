<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        >
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="18dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_arrow_left"
            android:contentDescription="@string/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/back_button"
            app:layout_constraintBottom_toBottomOf="@id/back_button"
            app:layout_constraintStart_toEndOf="@id/back_button"
            android:text="@string/back_button_text"
            android:fontFamily="@font/lato_semibold"
            android:textColor="@color/back_text_color"
            android:textSize="16sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/back_button_layout"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/phone_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/title_text_color"
            android:text="@string/phone"
            />
        <TextView
            android:id="@+id/phone_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/title_text_color"
            android:fontFamily="@font/lato_semibold"
            tools:text="+792142812"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phone_layout"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/title_text_color"
            android:text="@string/name_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/title_text_color"
            android:fontFamily="@font/lato_semibold"
            tools:text="Олегофрен"
            app:layout_constraintTop_toBottomOf="@id/name_header"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            android:id="@+id/name_icon"
            android:layout_width="14dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_arrow_right_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/arrow_next"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_layout"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nickname_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/title_text_color"
            android:text="@string/nickname_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/nickname_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/title_text_color"
            android:fontFamily="@font/lato_semibold"
            tools:text="y19th"
            app:layout_constraintTop_toBottomOf="@id/nickname_header"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/nickname_icon"
            android:layout_width="14dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_arrow_right_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/arrow_next"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/drag_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/item_drag_line"
        app:layout_constraintTop_toBottomOf="@id/nickname_layout"
        app:layout_constraintBottom_toTopOf="@id/saved_news_layout"
        android:paddingHorizontal="100dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/drag_line"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/saved_news_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/drag_line"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/saved_news_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saved_news"
            android:textSize="26sp"
            android:fontFamily="@font/lato_semibold"
            android:textColor="@color/back_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/saved_news_icon"
            android:layout_width="14dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_arrow_right_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/saved_news_field"
            app:layout_constraintBottom_toBottomOf="@id/saved_news_field"
            android:contentDescription="@string/arrow_next"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/liked_news_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/saved_news_layout"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/liked_news_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/liked_news"
            android:textSize="26sp"
            android:fontFamily="@font/lato_semibold"
            android:textColor="@color/back_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/liked_news_icon"
            android:layout_width="14dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_arrow_right_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/liked_news_field"
            app:layout_constraintBottom_toBottomOf="@id/liked_news_field"
            android:contentDescription="@string/arrow_next"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="40dp"
        android:text="@string/sign_out_button"
        android:textColor="@color/red_300"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />

</androidx.constraintlayout.widget.ConstraintLayout>